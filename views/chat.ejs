<% if (currentUser) { %>
  <div class="container">
    <h1>Chat</h1>
    <form id="chatForm">
      <input type="text" id="chat-input">
        <input type="hidden" id="chat-user-name"
          value="<%= currentUser.fullName %>">
        <input type="hidden" id="chat-user-id"
          value="<%= currentUser._id %>">
      <input type="submit" value="Send" class="button">
    </form>
    <div id="chat"></div>
  </div>
  <% } %>
